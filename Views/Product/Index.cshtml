@model IEnumerable<CRUD.Models.Product>
@{
    ViewData ["Title"] = "Index";
    var objlist = ViewData["CategoryList"] as IEnumerable<Product>;
}
<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Application Type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="30%">@obj.Price</td>
                    <td width="10%">@obj.Category.Name</td>
                    <td width="10%">@obj.ApplicationType.name</td>

                    <td class="text-center">
                         <div class=w-75 btn-group" role="group">
                        <a asp-action="Upsert" asp-controller="Product" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">Edit<i class="bi bi-pencil-square"></i></a>

                    </div>
                    <div class=w-75 btn-group" role="group">
                        <a asp-action="Delete" asp-controller="Product" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">Delete<i class="bi bi-trash"></i></a>
                    </td>
                 

                    
                </tr>
               
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product exists.</p>
    }

</div>

