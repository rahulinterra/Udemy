@*@model Info.Models*@
@{
    ViewData["Title"] = "Index";
    var objectApplicationTypelist = ViewData["ApplicationTypeList"] as IEnumerable<ApplicationType>;
}

<div class"cotainer  p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ApplicationType List</h2>
        </div>
        <div class="col-6 text-end">
            
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Create new Application Type</a>
        </div>
    </div>
    <br /> <br />
    </div>
<h1>Application Type</h1>

<table class="table table-bordered table-striped" style="width:100%":>

<thead>
    <tr>
        <th>
            Name
        </th>

         
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.name
                <td>
                    <div class=w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="ApplicationType" asp-route-Id="@obj.id" class="btn btn-primary mx-2">Edit<i class="bi bi-pencil-square"></i></a>

                    </div>
                    <div class=w-75 btn-group" role="group">
                        <a asp-action="Delete" asp-controller="ApplicationType" asp-route-Id="@obj.id" class="btn btn-danger mx-2">Delete<i class="bi bi-trash"></i></a>

                    </div>
                </td>

               
            </tr>
            
        }
    </tbody>
   </table>
