@model CRUD.Models.ApplicationType
<form method="post" asp-action="DeletePost">
    <input asp-for="id" hidden />
    <div class="border p-3 mt-4">    
        <div class="row pb-4">
            <h2 class="text-primary">
                Delete
            </h2>
            <hr />
            </div>

            <div asp-validation-summary="All"></div>
            <div class="mb-3">
               <label asp-for="name"></label>
                  <input asp-for="name" disabled class="form-control"/>
                  
            </div>
            <button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
            <a asp-controller="ApplicationType" asp-action="Index"  class="btn btn-secondary" style="width:150px">Back To List</a>

        </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
