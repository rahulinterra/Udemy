@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor  HttpContextAccessor 
@using CRUD.Utility


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Info</title>
    
